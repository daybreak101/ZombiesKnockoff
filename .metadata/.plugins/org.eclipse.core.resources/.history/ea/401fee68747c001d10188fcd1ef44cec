package ui;

import java.awt.BasicStroke;
import java.awt.Color;
import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.Stroke;

import main.Handler;

public class TextButton extends UIObject{
	
	private String text;
	private ClickListener clicker;
	private boolean isSelected;
	
	public TextButton(Handler handler, float x, float y, int width, int height, String text, ClickListener clicker) {
		super(handler, x, y, width, height);
		this.text = text;
		this.clicker = clicker;
	}

	int r;
	int g;
	int b;
	int rMin, gMin, bMin;
	boolean increase = true;
	@Override
	public void tick() {
		Color setColor = handler.getSettings().getHudColor();
		rMin = setColor.getRed();
		gMin = setColor.getGreen();
		bMin = setColor.getBlue();
		if(hovering) {
			if(increase) {
				r++;
				g++;
				b++;
				if(r >=255 || g >= 255 || b >= 255)
					increase = false;
			}
			else {
				r--;
				g--;
				b--;
				if(r <= rMin || g <= gMin || b <= bMin)
					increase = true;
			}

		}

	}

	@Override
	public void render(Graphics g) {
		if(hovering) {
			g.setColor(Color.black);
			g.fillRect((int) x, (int) y, width, height);
		}	
		
		
		
		
		if(isSelected) {
			//g.setColor(); add handler to get hud color
			Graphics2D g2 = (Graphics2D) g;
			float thickness = 2;
			Stroke oldStroke = g2.getStroke();
			g2.setStroke(new BasicStroke(thickness));
			g2.drawRect((int) x, (int) y, width, height);
			g2.setStroke(oldStroke);
		}
		
	}

	@Override
	public void onClick() {
		clicker.onClick();
		
	}
	
	public boolean isSelected() {
		return isSelected;
	}
	
	public void setSelected(boolean isSelected) {
		this.isSelected = isSelected;
	}

}
